<Window x:Class="MyProject.PermissionUsers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyProject"
        mc:Ignorable="d"
        Title="הרשאות" Height="300" Width="400">
    <Grid>
        <DataGrid Name="TecherDataTable" AutoGenerateColumns="False" Background="Honeydew">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding StudentOrTeacher}" Header="תפקיד"  Width="100"/>
                <DataGridTextColumn Binding="{Binding Password}" Header="סיסמא"  Width="70"/>
                <DataGridTextColumn Binding="{Binding Last_Name}" Header="שם משפחה"  Width="90"/>
                <DataGridTextColumn Binding="{Binding First_Name}" Header="שם פרטי"  Width="90"/>
                <DataGridTextColumn Binding="{Binding User_Id}" Header="ת.ז" Width="30"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
